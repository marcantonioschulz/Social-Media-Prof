# Application
NODE_ENV=development
APP_PORT=3000
APP_URL=http://localhost

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=socialmedia
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=socialmedia

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# MinIO (S3 Storage)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme_minio_password
MINIO_USE_SSL=false
MINIO_BUCKET=social-media-assets

# JWT
JWT_SECRET=changeme_jwt_secret_minimum_32_characters_long_please
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=changeme_refresh_secret_also_very_long_and_secure
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/ogg
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg

# Email (Optional - f√ºr Benachrichtigungen)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@example.com

# Frontend
VITE_API_URL=http://localhost:3000/api

# Logging
LOG_LEVEL=debug
